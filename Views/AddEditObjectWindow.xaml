<Window x:Class="RealEstateAgency.Views.AddEditObjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RealEstateAgency.ViewModels"
        Title="{Binding WindowTitle}" Height="750" Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>

        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SubmitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#9E9E9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Основная информация" FontWeight="Bold" FontSize="16" Foreground="#1E3A63" Margin="0,0,0,15"/>

                <!-- Адрес -->
                <TextBlock Text="Адрес *" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormTextBoxStyle}" MaxLength="200"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <!-- Комнаты -->
                        <TextBlock Text="Количество комнат *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding RoomCount, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <!-- Площадь -->
                        <TextBlock Text="Площадь (м²) *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Area, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Цена -->
                <TextBlock Text="Цена (руб.) *" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormTextBoxStyle}"/>

                <!-- Статус -->
                <TextBlock Text="Статус *" Style="{StaticResource FormLabelStyle}"/>
                <ComboBox ItemsSource="{Binding Statuses}" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding StatusId, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormComboBoxStyle}"/>

                <!-- Тип объекта -->
                <TextBlock Text="Тип объекта *" Style="{StaticResource FormLabelStyle}"/>
                <ComboBox ItemsSource="{Binding Types}" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding TypeOfSubjectId, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormComboBoxStyle}"/>

                <!-- Тип сделки -->
                <TextBlock Text="Тип сделки *" Style="{StaticResource FormLabelStyle}"/>
                <ComboBox ItemsSource="{Binding Deals}" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding TypeOfDealId, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormComboBoxStyle}"/>

                <!-- Владелец -->
                <TextBlock Text="Владелец *" Style="{StaticResource FormLabelStyle}"/>
                <ComboBox ItemsSource="{Binding Owners}" DisplayMemberPath="FullName" SelectedValuePath="Id" SelectedValue="{Binding OwnerId, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormComboBoxStyle}"/>

                <!-- === НОВОЕ ПОЛЕ: ФОТОГРАФИЯ === -->
                <Separator Margin="0,15"/>
                <TextBlock Text="Фотография" FontWeight="Bold" FontSize="14" Foreground="#1E3A63"/>

                <TextBlock Text="Ссылка на изображение (URL)" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding MainPhotoUrl, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBoxStyle}"
                         ToolTip="Вставьте ссылку на картинку из интернета"/>

                <!-- Превью картинки -->
                <Border Height="150" Background="#F5F5F5" CornerRadius="4" BorderBrush="#DDD" BorderThickness="1">
                    <Grid>
                        <TextBlock Text="Нет изображения" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#AAA"/>
                        <Image Source="{Binding MainPhotoUrl}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                <!-- ============================== -->

            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{Binding SubmitButtonText}" Style="{StaticResource SubmitButtonStyle}" Command="{Binding SubmitCommand}"/>
            <Button Content="Отмена" Style="{StaticResource CancelButtonStyle}" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>